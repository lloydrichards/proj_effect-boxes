{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "extends": ["ultracite"],
  "linter": {
    "rules": {
      "nursery": {
        "noShadow": "off",
        "useMaxParams": "off",
        "useConsistentTypeDefinitions": "off"
      },
      "style": {
        "useDefaultSwitchClause": "off",
        "noMagicNumbers": "off"
      },
      "performance": {
        "noBarrelFile": "off"
      },
      "suspicious": {
        "noUnsafeDeclarationMerging": "off",
        "noShadowRestrictedNames": "off"
      }
    }
  }
}
