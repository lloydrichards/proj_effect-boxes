{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": ["src/**/*.ts", "scratchpad/**/*.ts", "tests/**/*.ts"]
  },
  "linter": {
    "rules": {
      "nursery": {
        "noShadow": "off",
        "useMaxParams": "off",
        "useConsistentTypeDefinitions": "off",
        "useConsistentArrowReturn": "warn"
      },
      "complexity": {
        "noArguments": "off"
      },
      "style": {
        "useDefaultSwitchClause": "off",
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": false
          }
        },
        "noMagicNumbers": "off",
        "useFilenamingConvention": "off"
      },
      "performance": {
        "noBarrelFile": "off",
        "noNamespaceImport": "off"
      },
      "suspicious": {
        "noUnsafeDeclarationMerging": "off",
        "noShadowRestrictedNames": "off",
        "noSkippedTests": "warn"
      }
    }
  }
}
